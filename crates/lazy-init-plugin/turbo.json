{
   "$schema": "https://turbo.build/schema.json",
   "extends": ["//"],
   "pipeline": {
      "build": {
         "dependsOn": ["^build"],
         "inputs": [
            "src/**",
            "!src/tests/**",
            "Cargo.toml",
            "../../.cargo/config.toml"
         ]
      },
      "test": {
         "dependsOn": ["^build"],
         "inputs": [
            "src/**",
            "Cargo.toml",
            "../../.cargo/config.toml"
         ]
      }
   }
}
